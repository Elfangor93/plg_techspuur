<?xml version="1.0" encoding="UTF-8"?>
<extension type="plugin" group="system" method="upgrade">
    <name>plg_system_techspuur</name>
    <creationDate>2025-09-10</creationDate>
    <copyright>Copyright (C) 2025 Manuel Haeusler. All rights reserved.</copyright>
    <license>GNU General Public License version 3 or later</license>
    <author>Manuel Häusler</author>
    <authorUrl>https://tech.spuur.ch</authorUrl>
    <version>1.0.0</version>
    <description>PLG_SYSTEM_TECHSPUUR_XML_DESCRIPTION</description>
    <namespace path="src">Elfangor93\Plugin\System\Techspuur</namespace>

    <files>
      <folder plugin="techspuur">services</folder>
      <folder>language</folder>
      <folder>layouts</folder>
      <folder>src</folder>
    </files>

    <languages>
      <language tag="en-GB">language/en-GB/plg_system_techspuur.ini</language>
      <language tag="en-GB">language/en-GB/plg_system_techspuur.sys.ini</language>
      <language tag="de-DE">language/de-DE/plg_system_techspuur.ini</language>
      <language tag="de-DE">language/de-DE/plg_system_techspuur.sys.ini</language>
    </languages>

    <config>
      <fields name="params">
        <fieldset name="basic" addfieldprefix="Elfangor93\Plugin\System\Techspuur\Field">
          <field name="note1"
                 type="note"
                 label="PLG_SYSTEM_TECHSPUUR_FIELD_NOTE_CHECK_SERVER"
                 description="PLG_SYSTEM_TECHSPUUR_FIELD_NOTE_CHECK_SERVER_DESC"
          />
          <field name="create_log"
                 type="radio"
                 default="0"
                 class="btn-group"
                 layout="joomla.form.field.radio.switcher"
                 label="PLG_SYSTEM_TECHSPUUR_FIELD_CREATE_LOG"
                 description="PLG_SYSTEM_TECHSPUUR_FIELD_CREATE_LOG_DESC" >
              <option value="0">JNO</option>
              <option value="1">JYES</option>
          </field>
          <field name="checkserver"
					       type="buttonscript"
                 label="PLG_SYSTEM_TECHSPUUR_FIELD_CHECK_SERVER"
                 description="PLG_SYSTEM_TECHSPUUR_FIELD_CHECK_SERVER_DESC"
                 text="PLG_SYSTEM_TECHSPUUR_FIELD_CHECK_SERVER_TXT"
                 script="check_server"
                 icon="out-2"
          />
          <field name="downloadlog"
					       type="downloadlog"
                 label="PLG_SYSTEM_TECHSPUUR_FIELD_DOWNLOAD_LOG"
                 text="PLG_SYSTEM_TECHSPUUR_FIELD_DOWNLOAD_LOG_TXT"
                 icon="download"
          />
          <field name="spacer1"
                 type="spacer"
                 hr="true"
          />
          <field name="note2"
                 type="note"
                 label="PLG_SYSTEM_TECHSPUUR_FIELD_NOTE_EXTENSIONS"
                 description="PLG_SYSTEM_TECHSPUUR_FIELD_NOTE_EXTENSIONS_DESC"
          />
          <field name="refreshlist"
					       type="buttonscript"
                 label="PLG_SYSTEM_TECHSPUUR_FIELD_REFRESH_LIST"
                 description="PLG_SYSTEM_TECHSPUUR_FIELD_REFRESH_LIST_DESC"
                 text="PLG_SYSTEM_TECHSPUUR_FIELD_REFRESH_LIST_TXT"
                 script="refresh_list"
                 icon="loop"
          />
          <field name="spacer2"
                 type="spacer"
                 hr="true"
          />
          <field name="extensions"
					       type="extensions"
          />
        </fieldset>
      </fields>
    </config>

    <changelogurl>https://updates.spuur.ch/plg_techspuur_changelog.xml</changelogurl>
	
    <updateservers>
      <server type="extension" priority="1" name="TechSpuur Framework">https://updates.spuur.ch/plg_techspuur.xml</server>
    </updateservers>
</extension>

